import pytest
import allure
import requests
import json


@pytest.fixture(scope="module")
def case4():
    url = "https://restful-booker.herokuapp.com/booking"
    headers = {"Content-Type": "application/json"}
    payload = {
        "firstname": "Nikita",
        "lastname": "Nashi",
        "totalprice": 111,
        "depositpaid": True,
        "bookingdates": {
            "checkin": "2018-01-01",
            "checkout": "2019-01-01"
        },
        "additionalneeds": "Breakfast"
    }
    response = requests.post(url=url, headers=headers, json=payload)
    assert response.status_code == 200
    response_data = response.json()
    booking_id = response_data["bookingid"]
    return booking_id


def test_delete_created_booking(create_token, case4):
    print(case4)
    url = "https://restful-booker.herokuapp.com/booking/" + str(case4)
    print(url)
    cookie = "token=" + str(create_token)
    headers = {
        "Content-Type": "application/json",
        "Accept": "application/json",
        "Cookie": cookie
    }
    response = requests.delete(url=url, headers=headers)
    assert response.status_code == 201


def test_update_deleted_id(create_token, case4):
    url = "https://restful-booker.herokuapp.com/booking/" + str(case4)
    print(url)
    cookie = "token=" + str(create_token)
    headers = {
        "Content-Type": "application/json",
        "Accept": "application/json",
        "Cookie": cookie
    }
    data = requests.patch(url=url, headers=headers)
    assert data.status_code == 405
